{
  "name": "pepr-docs",
  "type": "module",
  "version": "0.0.1",
  "workspaces": [
    "scripts"
  ],
  "scripts": {
    "astro": "node --env-file=.env node_modules/.bin/astro",
    "build": "bash scripts/build.sh",
    "dev": "node --env-file=.env node_modules/.bin/astro dev",
    "dev:netlify": "netlify dev",
    "format:check": "npm run format:code && npm run format:markdown && npm run format:prettier -- --check",
    "format:code": "eslint .",
    "format:fix": "npm run format:code -- --fix && npm run format:markdown -- --fix && npm run format:prettier -- --write",
    "format:markdown": "npx -y markdownlint-cli --ignore node_modules --ignore dist --ignore tmp --ignore .astro --ignore src/content/docs --ignore src/content/versions --ignore scripts --ignore 090_community --ignore 100_contribute \"**/*.{md,mdx}\"",
    "format:prettier": "prettier .",
    "linkcheck": "bash .github/workflows/scripts/linkcheck.sh",
    "prepare": "husky || true",
    "preview": "node --env-file=.env node_modules/.bin/astro preview",
    "start": "node --env-file=.env node_modules/.bin/astro dev",
    "test": "vitest scripts/tests/ --exclude '**/*integration*.test.mjs','**/*e2e*.test.mjs' && npm run linkcheck",
    "test:e2e": "VITEST_RUN_E2E=true vitest run scripts/tests/e2e-*.test.mjs",
    "test:integration": "vitest run --reporter=verbose scripts/tests/*integration*.test.mjs",
    "test:integration:watch": "vitest scripts/tests/*integration*.test.mjs",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.35.2",
    "@astrojs/starlight-tailwind": "^4.0.1",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.15.2",
    "sharp": "^0.34.2",
    "starlight-contextual-menu": "^0.1.5",
    "starlight-github-alerts": "^0.1.1",
    "starlight-image-zoom": "^0.13.2",
    "starlight-links-validator": "^0.17.2",
    "starlight-llms-txt": "^0.6.0",
    "starlight-scroll-to-top": "^0.4.0",
    "starlight-versions": "^0.5.4",
    "tailwindcss": "^4.1.13"
  },
  "optionalDependencies": {
    "@pagefind/linux-x64": "^1.4.0",
    "@tailwindcss/oxide-linux-x64-gnu": "*",
    "lightningcss-linux-x64-gnu": "*",
    "pagefind": "^1.2.0"
  },
  "devDependencies": {
    "@defenseunicorns/eslint-config": "^1.1.2",
    "commander": "^11.1.0",
    "esbuild": "^0.27.0",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "linkinator": "^7.2.0",
    "lint-staged": "^16.2.6",
    "markdownlint-cli": "^0.45.0",
    "netlify-cli": "^23.10.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "semver": "^7.5.4",
    "vitest": "^1.6.0",
    "yaml": "^2.3.4"
  }
}
