{
  "name": "pepr-docs",
  "type": "module",
  "version": "0.0.1",
  "workspaces": [
    "build",
    "site"
  ],
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "linkcheck": "npm run build && npm run preview & sleep 5 && npm run test:e2e; EXIT_CODE=$?; pkill -P $$ astro; exit $EXIT_CODE",
    "astro": "astro",
    "test": "npm run test:unit && npm run linkcheck",
    "test:unit": "npm run test -w build",
    "test:e2e": "npm run test -w build -- tests/e2e-link-validation.test.mjs",
    "test:watch": "npm run test:watch -w build",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.35.2",
    "@astrojs/starlight-tailwind": "^4.0.1",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.6.1",
    "sharp": "^0.34.2",
    "starlight-llms-txt": "^0.6.0",
    "starlight-versions": "^0.5.4",
    "tailwindcss": "^4.1.13"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*",
    "lightningcss-linux-x64-gnu": "*"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "linkinator": "^7.2.0"
  }
}
